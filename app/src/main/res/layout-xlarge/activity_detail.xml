<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9">
        <include
            android:id="@+id/inTitle"
            layout="@layout/layout_top_navigation" />
        <RelativeLayout
            android:id="@+id/videoContainer"
            android:layout_width="match_parent"
            android:layout_height="607.5dp"
            android:layout_below="@+id/inTitle">

            <cn.geeksworld.skiingshow.views.SimpleVideoView
                android:id="@+id/videoView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_margin="0dp"
                android:padding="0dp" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/listLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/videoContainer">
            <ImageView
                android:id="@+id/detailTypeBgImageView"
                android:layout_width="match_parent"
                android:layout_height="330dp"
                android:src="@mipmap/detail_type_bg_blue"
                android:scaleType="fitXY" />
            <LinearLayout
                android:id="@+id/typeButtonLayout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:background="@color/white"
                android:paddingBottom="4dp">
                <ImageButton
                    android:id="@+id/typeZhengQueImageButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:src="@mipmap/detail_type_button_blue"
                    android:scaleType="fitXY"
                    android:background="#00000000"
                    android:onClick="typeZhengQueBtnClcked"
                    android:paddingRight="2dp"/>
                <ImageButton
                    android:id="@+id/typeCuoWuImageButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:src="@mipmap/detail_type_button_red"
                    android:scaleType="fitXY"
                    android:background="#00000000"
                    android:onClick="typeCuoWuBtnClcked"
                    android:paddingLeft="2dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/typeButtonTextLayout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:text="动作教学"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textSize35" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:text="错误动作"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textSize35" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/typeButtonLayout">
                <ImageView
                    android:id="@+id/mainVideoImageView"
                    android:layout_width="360dp"
                    android:layout_height="270dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:scaleType="fitXY"/>
                <HorizontalScrollView
                    android:id="@+id/zhengQueHorizontalScrollView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_margin="10dp" >

                        <GridView
                            android:id="@+id/zhengQueGrid"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:gravity="center"
                            android:numColumns="auto_fit"
                            android:stretchMode="spacingWidthUniform" >
                        </GridView>
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/infoButtonTextLayout"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@id/listLayout"
            android:orientation="horizontal"
            android:background="@color/white">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:paddingRight="1dp">
                <ImageView
                    android:id="@+id/foldInfoLeftBgImageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/activity_detial_fold_type_btn_selected_bg_color"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:text="课程简介"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize35" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3">
                <ImageView
                    android:id="@+id/foldInfoRightBgImageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/activity_detial_fold_type_btn_normal_bg_color"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:text="练习动作要领"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize35" />
            </RelativeLayout>
        </LinearLayout>
        <ScrollView
            android:id="@+id/leftBtnContentRightScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/infoButtonTextLayout">
            <TextView
                android:id="@+id/fold1TextView"
                android:layout_below="@+id/fold1ImageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="30dp"
                android:paddingLeft="30dp"
                android:paddingTop="30dp"
                android:paddingBottom="30dp"
                android:textSize="@dimen/textSize28"
                android:lineSpacingExtra="10dp" />
        </ScrollView>
        <ScrollView
            android:id="@+id/rightBtnContentRightScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/infoButtonTextLayout"
            android:visibility="invisible">
            <TextView
                android:id="@+id/fold2TextView"
                android:layout_below="@+id/fold2ImageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="30dp"
                android:paddingLeft="30dp"
                android:paddingTop="30dp"
                android:paddingBottom="30dp"
                android:textSize="@dimen/textSize28"
                android:lineSpacingExtra="10dp" />
        </ScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true">
            <ImageView
                android:layout_width="400dp"
                android:layout_height="200dp"
                android:src="@mipmap/activity_detail_logo"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>



    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/otherLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_above="@+id/bottomBackLayout">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/activity_detial_other_bg"
            android:scaleType="fitXY"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            android:src="@mipmap/detail_arrow_up"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/bottomBackLayout"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="0dp"
            android:src="@mipmap/activity_bottom_back_bg"
            android:scaleType="fitXY" />
        <ImageButton
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"

            android:scaleType="fitXY"
            android:src="@drawable/list_back_button"
            android:onClick="backButtonClicked"
            android:background="#00000000"/>
        <cn.geeksworld.skiingshow.views.LongTouchBtn
            android:id="@+id/appControlBarBtn"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:background="#00000000"
            android:onClick="appControlBarBtnClicked" />
    </RelativeLayout>
</LinearLayout>
