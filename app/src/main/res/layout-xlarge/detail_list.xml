<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/detailItemLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="240dp"
        android:layout_height="240dp">
        <ImageView
            android:id="@+id/detailItemImageView"
            android:layout_width="240dp"
            android:layout_height="180dp"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/mine_head_bg"
            android:scaleType="fitXY">
        </ImageView>
        <TextView
            android:id="@+id/detailItemTextView"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_below="@+id/detailItemImageView"
            android:textSize="@dimen/textSize25"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="标题"/>
    </RelativeLayout>

</LinearLayout>
